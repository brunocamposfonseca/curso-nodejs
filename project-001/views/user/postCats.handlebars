<h2>{{category.name}}: </h2>
<div class="d-flex flex-column gap-4 mt-4 mb-4">
{{#each posts}}
  <div class="card">
    <div class="card-body">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <a href="/posts/{{slug}}"><button class="btn btn-secondary btn-sm">Leia mais</button></a>
      <hr>
      <small>Data de publicação: {{date}}</small>
    </div>
  </div>
  {{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}
</div>
