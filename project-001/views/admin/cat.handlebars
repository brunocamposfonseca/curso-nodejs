<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/cat/add"><button class="btn btn-success">Nova categoria</button></a>
<br>
  {{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4><a href="/cat/curso-{{slug}}">{{name}}</a></h4>
      <small>#{{slug}}</small>
      <br>
      <small>Data de criação: {{date}}</small>
      <br>
      <a href="/admin/cat/edit/{{_id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
      <form action="/admin/cat/delete" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}
